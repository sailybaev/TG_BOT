# Telegram Bot Configuration
# Copy this file to .env and fill in the values

# Telegram Bot Token (required)
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Use http://localhost:8000 for local development
# Use http://host.docker.internal:8000 when running bot in Docker but backend locally
# Use https://your-domain.com for production
TABYS_API_URL=http://localhost:8000

# Tabys API timeout in seconds
TABYS_API_TIMEOUT=30

# Redis URL
# For local development: redis://localhost:6379/0
# For Docker: redis://redis:6379/0 (automatically set in docker-compose)
REDIS_URL=redis://localhost:6379/0

# Session TTL in seconds (default: 24 hours)
REDIS_SESSION_TTL=86400

# Rate Limiting
LOGIN_RATE_LIMIT=5
GENERAL_RATE_LIMIT=30

LOG_LEVEL=INFO

DEBUG=false

# User Telegram Linking
# Shared secret between bot and backend for user account linking
# MUST match TELEGRAM_BOT_LINK_SECRET in backend .env
TELEGRAM_BOT_LINK_SECRET=your_secret_here_change_this
